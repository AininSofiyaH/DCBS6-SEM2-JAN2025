import java.util.Scanner;

public class Demo {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        
        System.out.println("Sila pilih operasi aritmetrik:");
        System.out.println("1. Tambah (+)");
        System.out.println("2. Tolak (-)");
        System.out.println("3. Darab (*)");
        System.out.println("4. Bahagi (/)");
        System.out.println("5. Modulus (%)");
        System.out.print("Isikan nombor operasi aritmetrik yang dipilih: ");
        
        int choice = scanner.nextInt();
        
        
        System.out.print("Masukkan Nombor Pertama: ");
        double num1 = scanner.nextDouble();
        
        System.out.print("Masukkan Nombor Kedua: ");
        double num2 = scanner.nextDouble();
        
        double result = 0;
       
        switch (choice) {
            case 1:
                result = num1 + num2;
                System.out.println("Result: " + num1 + " + " + num2 + " = " + result);
                break;
            case 2:
                result = num1 - num2;
                System.out.println("Result: " + num1 + " - " + num2 + " = " + result);
                break;
            case 3:
                result = num1 * num2;
                System.out.println("Result: " + num1 + " * " + num2 + " = " + result);
                break;
            case 4:
                result = num1 / num2;
                System.out.println("Result: " + num1 + " / " + num2 + " = " + result);
                break;
            case 5:
                result = num1 % num2;
                System.out.println("Result: " + num1 + " % " + num2 + " = " + result);
                break;
        }
        
       
        scanner.close();
        
      }
}
